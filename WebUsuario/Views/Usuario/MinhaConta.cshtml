@using Newtonsoft.Json
@using WebUsuario.Models
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}
@{
    //ler os dados do usuário gravado em sessão
    var json = HttpContextAccessor.HttpContext.Session.GetString("usuario");
    var usuario = JsonConvert.DeserializeObject<UsuarioModel>(json);
}
<h5>Dados do usuário</h5>
<hr />
<div class="mb-3">
    ID do usuário: <strong>@usuario.IdUsuario</strong>

</div>
<div class="mb-3">
    Nome do usuário: <strong>@usuario.Nome</strong>
</div>
<div class="mb-3">
    Email: <strong>@usuario.Email</strong>
</div>
<div class="mb-3">
    CPF: <strong>@usuario.CPF</strong>
</div>
<div class="mb-3">
    Ultimo_Acesso: <strong>@usuario.Ultimo_Acesso</strong>
</div>
<div class="mb-3">
    Qnt_Erro_Login: <strong>@usuario.Qnt_Erro_Login</strong>
</div>
<div class="mb-3">
    BL_Ativo: <strong>@usuario.BL_Ativo</strong>
</div>


